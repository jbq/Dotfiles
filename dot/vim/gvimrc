"set columns=100
"set lines=46

" Use Unicode
set keymap=accents

" background and foreground colors
highlight Normal guibg=black
highlight Normal guifg=lightgray

"highlight Visual guibg=bg

" I don't want non-text items to be bold
"highlight NonText gui=NONE

" set text font
if has ("gui_win32")
    "set guifont=Courier_New:h9
	set guifont=Lucida_Console:h10:cANSI
elseif has ("gui_mac")
    "set guifont=Courier_New:h9
	set guifont=Monaco:h13
else
    set guifont=Monospace\ 10
endif

" no toolbar please
set guioptions-=T

" Remove the Syntax menu
if v:lang == "C"
    unmenu Syntax
    unmenu! Syntax
elseif v:lang == "fr_FR"
    unmenu Syntaxe
    unmenu! Syntaxe
endif

silent! source $HOME/usr/dot/private/gvimrc

inoremenu &Insert.DocBook.Application.DocBook <application>DocBook</application>
inoremenu &Insert.DocBook.Application.Cron <application>cron</application>
inoremenu &Insert.DocBook.Product\ Name.Flash <productname>Flash</productname>
inoremenu &Insert.DocBook.Product\ Name.FreeBSD <productname>FreeBSD</productname>
inoremenu &Insert.DocBook.Product\ Name.Java <productname>Java</productname>
