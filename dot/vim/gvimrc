" noremenu &DocBook.View\ Document :make view<cr>
" inoremenu &DocBook.View\ Document <C-O>:make view<cr>

" Insert Menu
inoremenu &Insert.HTML.Head <esc>^i<head><cr><esc>$a<cr></head>
inoremenu &Insert.HTML.Skeleton <esc>ggi<?xml version='1.0'?><cr><html><cr><head><cr><title></title><cr></head><cr><body><cr><cr></body><cr></html><esc>kkkkka
inoremenu &Insert.HTML.Doctype\ Strict <!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"<cr>"http://www.w3.org/TR/html4/strict.dtd">

inoremenu &Insert.XML.XML\ Declaration <?xml version='1.0'?><cr>
inoremenu &Insert.XML.XML\ Declaration\ Latin <?xml version='1.0' encoding='iso-8859-1'?><cr>
inoremenu &Insert.XML.Stylesheet\ PI <?xml-stylesheet href="" type="text/xsl"?><cr>
inoremenu &Insert.XML.XSL\ Element <xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version='1.0'><cr><cr></xsl:stylesheet><C-O>k
inoremenu &Insert.XML.Sitemap\ Element <map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0"><cr><map:pipelines><cr><map:pipeline><cr></map:pipeline><cr></map:pipelines><cr></map:sitemap>
inoremenu &Insert.XML.Default\ Copy\ Template <C-O>:r ~/usr/dot/vim/header/default-copy-template.xml<CR>
nnoremenu &Insert.Project\ Info.Session :r ~/usr/dot/vim/header/session.xml<cr>
nnoremenu &Insert.Project\ Info.Todo :r ~/usr/dot/vim/header/todo.xml<cr>
nnoremenu &Insert.Header.JSP :0r ~/usr/dot/vim/header/jspstyle<cr>
nnoremenu &Insert.Header.XML :0r ~/usr/dot/vim/header/xmlstyle<cr>

inoremenu &Insert.Script\ Header./bin/sh #! /bin/sh<cr><cr>
inoremenu &Insert.Script\ Header./bin/bash #! /bin/bash<cr><cr>
inoremenu &Insert.Script\ Header./usr/bin/bash #! /usr/bin/bash<cr><cr>
inoremenu &Insert.Script\ Header./usr/local/bin/bash #! /usr/local/bin/bash<cr><cr>
inoremenu &Insert.Script\ Header./usr/bin/perl #! /usr/bin/perl<cr><cr>
inoremenu &Insert.Script\ Header./usr/local/bin/perl #! /usr/local/bin/perl<cr><cr>
" inoremenu &Insert.Date <Esc>:r!export LC_ALL=fr_FR.ISO_8859-1 && date "+\%A \%d \%B \%Y"<cr>i
